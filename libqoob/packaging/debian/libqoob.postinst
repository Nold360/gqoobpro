#!/bin/sh

if [ "$1" = configure ]; then
  if [ -x "/etc/init.d/udev" ]; then
     /etc/init.d/udev restart
  fi

  if [ -x "/sbin/modprobe" && -x "/sbin/rmmod" ]; then
     echo "Reloading usbhid module..."
     /sbin/rmmod usbhid
     /sbin/modprobe usbhid
     echo "Add your libqoob user to plugdev group."
  fi

fi
